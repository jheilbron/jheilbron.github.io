  groups    = {ccps, regulatory-reform-empirics, ccp-bibliography-250418},
  keywords  = {Credit default swaps, Financial networks, Eigenvector centrality, Financial contagion, Systemic risk, Super-spreader tax, biblio-reg-reform-empirics},
