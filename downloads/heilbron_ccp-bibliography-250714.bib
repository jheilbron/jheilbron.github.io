  urldate   = {2023-03-28},
}

@Article{Campbell2016,
  author    = {Campbell, Sean D. and Ivanov, Ivan},
  journal   = {SSRN Electronic Journal},
  title     = {Empirically Evaluating Systemic Risks in CCPs: The Case of Two CDS CCPs},
  year      = {2016},
  issn      = {1556-5068},
  abstract  = {We empirically evaluate the systemic stability of two large CDS CCPs. We show that positive correlations between the exposures of large dealers could lead to substantially larger combined stress losses to a CCP than if we consider dealers in isolation. These results highlight crowded trade concerns. We then study the risk faced by a set of CCPs from the clearing activities of their common dealers. We that the high positive correlations in exposures of dealers across CCPs can lead to dealers experiencing large losses to both CCP simultaneously. Our study illustrates the potential for contagion of stress through CCPs.},
