  file      = {:/Users/jheilbron/Library/CloudStorage/Dropbox/OFR/PDFs/SSRN Electronic Journal/CampbellIvanov_2016_Empirically Evaluating Systemic Risks in CCPs_ the Case of Two CDS CCPs.pdf:PDF},
